<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cardlayout" >
<LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="120dp"
             android:layout_marginTop="1dp"
             android:layout_weight="0.04"
             android:orientation="vertical"
             android:paddingRight="10dp" >

             <TextView
                 android:id="@+id/title"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="4dp"
                 android:text=""
                 android:textAppearance="?android:attr/textAppearanceLarge"
                 android:textColor="#040404"
                 android:textSize="16dp"
                 android:textStyle="bold"
                 android:typeface="sans" />

             <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal" >

                 <TextView
                     android:id="@+id/txtdoneper"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="55dp"
                     android:layout_weight="1"                                     
                     android:textAppearance="?android:attr/textAppearanceMedium"
                     android:textColor="#000000"
                     android:textSize="10dp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/txtdonecount"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:gravity="right"                     
                     android:textAppearance="?android:attr/textAppearanceMedium"
                     android:textColor="#000000"
                     android:textSize="10dp"
                     android:textStyle="bold" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="4dp"
                 android:layout_marginLeft="4dp"
                 android:layout_marginTop="4dp"
                 android:orientation="horizontal" >

                 <TextView
                     android:id="@+id/txtpla"
                     android:layout_width="50dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="0.01"
                     android:text="Total"
                     android:textAppearance="?android:attr/textAppearanceMedium"
                     android:textColor="#000000"
                     android:textSize="10dp"
                     android:textStyle="bold"
                     android:gravity="center" />

                 <ProgressBar
                     android:id="@+id/pBar1_main"
                     style="@style/CustomProgressBarcolor2"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="0.99" />
             </LinearLayout>
 <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal" >

                 <TextView
                     android:id="@+id/txtexeper"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="55dp"
                     android:layout_weight="1"                                       
                     android:textAppearance="?android:attr/textAppearanceMedium"
                     android:textColor="#000000"
                     android:textSize="10dp"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/txtexecount"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:gravity="right"                     
                     android:textAppearance="?android:attr/textAppearanceMedium"
                     android:textColor="#000000"
                     android:textSize="10dp"
                     android:textStyle="bold" />
             </LinearLayout>
             <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="4dp"
                 android:orientation="horizontal" >

                 <TextView
                     android:id="@+id/txtplab"
                     android:layout_width="50dp"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="2dp"
                     android:text="Done"
                     android:textAppearance="?android:attr/textAppearanceMedium"
                     android:textColor="#000000"
                     android:textSize="10dp"
                     android:textStyle="bold"
                     android:gravity="center" />

                 <ProgressBar
                     android:id="@+id/pBar2_main"
                     style="@style/CustomProgressBarcolor"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="0.99" />
             </LinearLayout>



             
         </LinearLayout>
</RelativeLayout>