                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#cecfce" >

                <EditText
                    android:id="@+id/fllp0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:layout_marginRight="1dp"
                    android:hint="cm"
