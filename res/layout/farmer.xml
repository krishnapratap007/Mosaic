<?xml version="1.0" encoding="utf-8"?>
 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    	android:padding="2dp"
        android:layout_weight="1" >

  
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/districts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/mandis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <AutoCompleteTextView
            android:id="@+id/autoCompletevillage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:hint="Village"
            android:imeOptions="actionDone"
            android:inputType="text" />

        <Button
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttongrey"
            android:text="Submit" />
  
    </LinearLayout>

     <LinearLayout
         android:id="@+id/bottom"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginTop="2dp"
         android:layout_weight="1"
         android:background="#e7f5d2"
         android:orientation="vertical"
         android:visibility="visible" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:layout_marginTop="2dp"
             android:orientation="horizontal" >

             <TextView
                 android:id="@+id/teh"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:enabled="false"
                 android:gravity="center"
                 android:text="Tehsil"
                 android:textAppearance="?android:attr/textAppearanceMedium" />

             <View
                 android:layout_width="1dp"
                 android:layout_height="match_parent"
                 android:layout_weight="0"
                 android:background="#d8d8d8" />

             <TextView
                 android:id="@+id/vill"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:enabled="false"
                 android:gravity="center"
                 android:text="Village"
                 android:textAppearance="?android:attr/textAppearanceMedium" />
         </LinearLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#d8d8d8" />

         <TableRow
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:layout_marginTop="2dp" >

             <EditText
                 android:id="@+id/fname"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:ems="10"
                 android:enabled="false"
                 android:hint="Farmer Name"
                 android:imeOptions="actionNext"
                 android:nextFocusForward="@+id/mob"
                 android:inputType="text|textNoSuggestions" />
         </TableRow>

         <TableRow
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:layout_marginTop="2dp" >

             <EditText
                 android:id="@+id/mob"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:ems="10"
                 android:enabled="false"
                 android:hint="Mobile No."
                 android:imeOptions="actionDone"
                 android:inputType="number" />
         </TableRow>

         <CheckBox
             android:id="@+id/demo"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:enabled="false"
             android:text="Demo Farmer" />

         <TableRow
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:layout_marginTop="5dp" >

             <Button
                 android:id="@+id/add"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:background="@drawable/buttongrey"
                 android:enabled="false"
                 android:text="ADD"
                 android:textColor="#000" />

             <Button
                 android:id="@+id/finish"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="2dp"
                 android:layout_weight="1"
                 android:background="@drawable/buttonorange"
                 android:enabled="false"
                 android:text="Finish"
                 android:textColor="#ffffff"
                 android:textStyle="bold" />
         </TableRow>
     </LinearLayout>

</LinearLayout>
     
    </ScrollView>
